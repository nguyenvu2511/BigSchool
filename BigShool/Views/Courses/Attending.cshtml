@model IEnumerable<BigShool.Models.Course>

@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Các Khóa Học Tham Dự</h2>

<div class="row">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="day">
                        @course.Dateime.ToString("dd")
                    </div>
                    <div class="month">
                        @course.Dateime.ToString("MM")
                    </div>
                    <div class="year">
                        @course.Dateime.ToString("yyyy")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
            </li>
        }
    </ul>
    </div>
